{
  "name": "chibi",
  "version": "0.1.0",
  "description": "Agentic Code Search CLI",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "chibi": "./dist/bin/chibi.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx bin/chibi.ts",
    "start": "node dist/bin/chibi.js",
    "try": "tsx bin/chibi.ts ask 'What is the project structure?' -q",
    "chibi": "tsx bin/chibi.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "typecheck": "tsc --noEmit",
    "download:rg": "tsx scripts/download-ripgrep.ts",
    "download:rg:current": "tsx scripts/download-ripgrep.ts --current",
    "postinstall": "tsx scripts/download-ripgrep.ts --current"
  },
  "keywords": [
    "cli",
    "ai",
    "code-search",
    "agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "cosmiconfig": "^9.0.0",
    "dotenv": "^17.2.3",
    "fs-extra": "^11.2.0",
    "ink": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "nanoid": "^5.0.0",
    "openai": "^4.70.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "react": "^18.3.1",
    "tiktoken": "^1.0.16",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "tsup": "^8.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.50.1",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
